<view class="container">
  <view class="page-body">
    <view class="btn-area">
      <button type="primary" bindtap="scanCode">扫一扫</button>
    </view>
    <view class="weui-cells__title">扫码结果</view>
    <view class="weui-cells weui-cells_after-title">
