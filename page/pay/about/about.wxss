.mid-section {
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  margin-top: 10px;
}

.mid-section-title {
  margin-top: 5px;
}

.mid-section-content {
  margin-top: 5px;
  font-size: small;
  color: darkgray;
  text-align: center;
  width: 90%;
  margin-bottom: 20px;
}

.footer-section {
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.question-title {
  display: flex;
  justify-content: center;
  font-size: large;
  text-align: center;
}

.question {
  margin-left: 10px;
  margin-right: 10px;
  margin-top: 10px;
}

.answer {
  margin-top: 5px;
  margin-bottom: 5px;
  color: darkgray;
  font-size: small;
  margin-left: 10px;
  margin-right: 10px;
}

.answer-more {
  margin-top: 5px;
  margin-bottom: 5px;
  color: darkgray;
  font-size: small;
  margin-left: 10px;
  margin-right: 10px;
  display: flex;
  justify-content: center;
  flex-direction: column;
}

.header-section {
   background-color: green; 
}
